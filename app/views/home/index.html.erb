  <script id="item-template" type="text/x-jquery-tmpl">
    <div class="podcast-list-item">
      <a href="#" class="thumbnail">
        <img data-src="${image}" alt="${title}" src="${image}">
      </a>
    </div>
  </script>
  <script id="podcast-detail-template" type="text/x-jquery-tmpl">
    <div id="podcast-details">
      <div class="page-header">
        <h1>${title} <small>by ${author}</small></h1>
      </div>
      <div class="row">
        <div class="col-md-2">
          <ul class="list-unstyled">
            {{each episodes}}
              <li>
                <div class="row" style="margin-top:5px;margin-bottom:5px;">
                  <div class="col-md-10">
                    <a href="#" class="podcast-title pull-left">${$value.get("title")}</a>
                  </div>
                  <div class="col-md-2">
                    <button type="button" class="btn btn-primary btn-xs pull-right">Play</button>                  
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="col-md-6">
          <h3 id="podcast-episode-title"></h3>
          <p id="podcast-episode-description"></p>
          <button type="button" class="btn btn-success">Play episode</button>
        </div>
        <div class="col-md-4">
          <a href="#" class="thumbnail">
            <img src="" id="podcast-episode-thumbnail">
          </a>
        </div>
      </div>
    </div>
  </script>
<div id="header" class="row">
  <div class="col-md-4">
    <p id="header-text">
      Empfaenger
    </p>
  </div>
  <div class="col-md-4">
    <div id="add-feed-form">
      <%= form_tag("/new_feed", method: "post", role: "form", class: "form-inline") do %>
        <div class="form-group">
          <%= text_field_tag(:feed, nil, :class => "form-control", :placeholder => "Create a new feed") %>
          
        </div>
        <%= submit_tag("Create", :class => "btn btn-default") %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div id="feed-list" class="col-md-2">
  </div>
  <div class="col-md-10" id="feed-content">
  </div>
</div>